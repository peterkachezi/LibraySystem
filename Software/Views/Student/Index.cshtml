
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
    var students = ViewBag.Students as List<BLL.StudentBLL>;
}

<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Students<small>Users</small></h2>
            <a href="/Student/Create/ " class="btn btn-primary">Add</a>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Settings 1</a>
                        <a class="dropdown-item" href="#">Settings 2</a>
                    </div>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                        <p class="text-muted font-13 m-b-30">

                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success" role="alert">
                                    @TempData["Success"]
                                </div>
                            }
                        </p>

                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>SNo.</th>
                                    <th>Adm No</th>
                                    <th>First Name</th>
                                    <th>Middle Name</th>
                                    <th>Last Name</th>
                                    <th>Class Name</th>
                                    <th>Stream</th>
                                    <th>Entry Date</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (students != null)
                                {
                                    int count = 1;

                                    foreach (var student in students)
                                    {

                                        <tr>
                                            <td>@count</td>

                                            <td class="text-capitalize">@student.AdmNo</td>
                                            <td class="text-capitalize">@student.FirstName</td>
                                            <td class="text-capitalize">@student.MiddleName</td>
                                            <td class="text-capitalize">@student.LastName</td>
                                            <td class="text-capitalize">@student.ClassName</td>
                                            <td class="text-capitalize">@student.StreamName</td>
                                            <td>@student.EntryDate.ToShortDateString() </td>
                                            <td>
                                                <a href="/Student/Edit/@student.Id " class="">Edit</a>

                                            </td>
                                        </tr>

                                        count++;
                                    }
                                }

                            </tbody>
                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn {
        margin-left: 50em;
    }
</style>

