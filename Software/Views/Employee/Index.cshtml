
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
    var employees = ViewBag.Employees as List<BLL.EmployeeBLL>;
}

<div class="col-md-12 col-sm-12 ">
    <div class="text-muted font-13 m-b-30" id="successMessage">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Success"]
            </div>
        }

    </div>
    <div class="x_panel">
        <div class="x_title">
            <h2>Responsive example<small>Users</small></h2>
            <a href="/Employee/Create/ " class="btn btn-primary">Add</a>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Settings 1</a>
                        <a class="dropdown-item" href="#">Settings 2</a>
                    </div>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>SNo.</th>
                                    <th>Category Name</th>
                                    <th>Entry Date</th>
                                    <th>Edit</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (employees != null)
                                {
                                    int count = 1;

                                    foreach (var employee in employees)
                                    {

                                        <tr>
                                            <td>@count</td>

                                            <td class="text-capitalize">@employee.FirstName  </td>
                                            <td>@employee.CreateDate.ToShortDateString() </td>
                                            <td>
                                                <a href="/Category/Edit/@employee.Id " class="">Edit</a>

                                            </td>
                                        </tr>

                                        count++;
                                    }
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Styles{


}

@section Scripts{



    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $('#successMessage').fadeOut('fast');
            }, 3000); // <-- time in milliseconds

        });
    </script>

}

